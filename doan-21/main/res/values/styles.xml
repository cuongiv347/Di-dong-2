<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#02CCB6</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="LN_horizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="LN_vertical">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="textTile">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/textTileSize</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="textContent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/textContentSize</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/background_textview</item>
        <item name="android:textColor">@color/colorcontent</item>
    </style>

    <style name="btnThem">
        <item name="android:background">@drawable/button1</item>
        <item name="android:padding">@dimen/sizeRadius</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawableLeft">@drawable/add</item>
        <item name="android:text">@string/them</item>
    </style>

    <style name="btnXoa">
        <item name="android:background">@drawable/button1</item>
        <item name="android:padding">@dimen/sizeRadius</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawableLeft">@drawable/delete</item>
        <item name="android:text">@string/xoa</item>
    </style>

    <style name="btnSua">
        <item name="android:background">@drawable/button1</item>
        <item name="android:padding">@dimen/sizeRadius</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawableLeft">@drawable/edit</item>
        <item name="android:text">@string/sua</item>
    </style>

    <style name="btnClear">
        <item name="android:background">@drawable/button1</item>
        <item name="android:padding">@dimen/sizeRadius</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawableLeft">@drawable/clear</item>
        <item name="android:text">@string/clear</item>
    </style>

    <style name="lvDelete">
        <item name="android:background">@color/colorAccent</item>
        <item name="android:layout_width">@dimen/imgDelete</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:src">@drawable/ic_delete_forever_black_24dp</item>
    </style>


    <style name="btnTable">
        <item name="android:background">@drawable/clickbtn_table</item>
        <item name="android:paddingRight">@dimen/padingBtn</item>
        <item name="android:layout_margin">@dimen/maginBtn</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawableLeft">@drawable/ic_last_page_black_24dp</item>
    </style>



    <style name="linearDefault">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="textViewCardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="fontFamily">sans-serif</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="imageCardView">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">100dp</item>
    </style>

    <style name="cardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TextView_Title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/background_textview</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">25sp</item>
    </style>

    <style name="TextView_TitleT">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#FF0000</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="EditText_Date">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:inputType">date</item>
        <item name="android:ems">10</item>
    </style>

    <style name="Background">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:padding">20dp</item>
    </style>

    <style name="ButtonMain">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">20dp</item>
        <item name="android:layout_margin">5dp</item>
    </style>

    <style name="LinearLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="LinearLayoutww">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="LinearLayoutwm">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
    </style>
    <style name="LinearLayoutmw">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="LinearLayoutmm">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">3dp</item>
    </style>

    <style name="RecyclerView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="ImageView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="CustomActivityAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_right</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_out_left</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_in_left</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_out_right</item>
    </style>
    <style name="ImageLoad" parent="@android:style/Animation.Activity">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="ImageMatTroi" parent="@android:style/Animation.Activity">
        <item name="android:layout_width">133dp</item>
        <item name="android:layout_height">133dp</item>
    </style>

</resources>
