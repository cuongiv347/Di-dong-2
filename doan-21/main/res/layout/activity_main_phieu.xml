<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/LinearLayoutmm"
    android:orientation="vertical"
    android:background="@drawable/bgphieu"
    tools:context=".GiaoDien.MainPhieu">
    <TextView
        android:text="@string/phieu"
        style="@style/textContent" />

    <LinearLayout
        style="@style/LinearLayoutmw">
        <EditText
            android:id="@+id/edtTKPhieu"
            android:layout_weight="1"
            style="@style/LinearLayoutww"
            android:hint="@string/timkiemphieu"/>
        <Button
            android:id="@+id/btnTKPhieu"
            android:background="@drawable/ic_search_black_24dp"
            android:layout_width="50dp"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <ListView
        android:id="@+id/lvPhieu"
        style="@style/LinearLayoutmw"
        android:layout_weight="1"
        android:padding="10dp"
        ></ListView>
    <LinearLayout
        style="@style/LN_horizontal">
        <Button
            android:id="@+id/btnThemPhieu"
            style="@style/btnTable"
            android:layout_weight="1"
            android:text="@string/them"/>
        <Button
            android:id="@+id/btnBack"
            style="@style/btnTable"
            android:layout_weight="1"
            android:text="@string/back"/>
    </LinearLayout>
</LinearLayout>